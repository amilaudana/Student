<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui/etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">student_listing.student_data_source</item>
            <item name="deps" xsi:type="string">student_listing.student_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">student_columns</item>
    </argument>

    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Student</label>
            </button>
        </buttons>
        <spinner>student_columns</spinner>
        <deps>
            <dep>student_listing.student_data_source</dep>
        </deps>
    </settings>

    <dataSource name="student_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">CodeAesthetix\Student\Ui\Component\DataProvider</argument>
            <argument name="name" xsi:type="string">student_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">student_id</argument>
            <argument name="requestFieldName" xsi:type="string">student_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">entity_id</item>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="spinner" xsi:type="string">student_columns</argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
            <filterSelect name="store_id" provider="${ $.parentName }">
                <settings>
                    <captionValue>0</captionValue>
                    <options class="CodeAesthetix\AnyCms\Ui\Component\Listing\Column\Cms\Options"/>
                    <label translate="true">Store View</label>
                    <dataScope>store_id</dataScope>
                    <imports>
                        <link name="visible">ns = ${ $.ns }, index = ${ $.index }:visible</link>
                    </imports>
                </settings>
            </filterSelect>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected items?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="student/student/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="edit">
                <settings>
                    <callback>
                        <target>editSelected</target>
                        <provider>student_listing.student_listing.student_columns_editor</provider>
                    </callback>
                    <type>edit</type>
                    <label translate="true">Edit</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="student_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="student/student/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">student_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">student_listing.student_listing.student_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">student_listing.student_listing.student_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>student_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="student_id" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <filter>text</filter>
                <label>Student ID</label>
            </settings>
        </column>
        <column name="first_name" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <filter>text</filter>
                <label>First Name</label>
            </settings>
        </column>
        <column name="last_name" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <filter>text</filter>
                <label>Last Name</label>
            </settings>
        </column>
        <column name="age" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <filter>number</filter>
                <label>Age</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Column">
            <settings>
                <filter>dateRange</filter>
                <label>Created At</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="CodeAesthetix\Student\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>block_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>
